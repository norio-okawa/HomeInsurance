@model HomeInsurance.Models.Policy

@{
    ViewBag.Title = "Confirmation";
    ViewBag.PageTitle = "Confirmation";
    Layout = "~/Views/Shared/ImageLayout.cshtml";
}

<div style="padding-bottom: 20px;">
    @if (Model.PolicyTerm == 0) {
        <b>Policy Cancelled Successfully.</b>
    }

    @if (Model.PolicyTerm == 1) {
        <b>Our customer service representative will contact you shortly for premium collection arrangements.</b>
    }

    @if (Model.PolicyTerm == 2) {
        <b>Policy Renewed Successfully.</b>
    }
</div>

<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(model => model.QuoteId, htmlAttributes: new { @class = "control-label col-md-5" })

        <div class="col-md-5">
            @Html.TextBoxFor(model => model.QuoteId, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PolicyKey, htmlAttributes: new { @class = "control-label col-md-5" })

        <div class="col-md-5">
            @Html.TextBoxFor(model => model.PolicyKey, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PolicyEffDate, htmlAttributes: new { @class = "control-label col-md-5" })

        <div class="col-md-5">
            @Html.TextBoxFor(model => model.PolicyEffDate, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PolicyEndDate, htmlAttributes: new { @class = "control-label col-md-5" })

        <div class="col-md-5">
            @Html.TextBoxFor(model => model.PolicyEndDate, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PolicyTerm, htmlAttributes: new { @class = "control-label col-md-5" })

        <div class="col-md-5">
            @Html.TextBoxFor(model => model.PolicyTerm, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PolicyStatus, htmlAttributes: new { @class = "control-label col-md-5" })

        <div class="col-md-5">
            @Html.TextBoxFor(model => model.PolicyStatus, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>
</div>